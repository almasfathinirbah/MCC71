@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="container">
        <h1>Division</h1>

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDivisiontModal">Create New</button>
        <table class="display table" id="tableDivision">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Id</th>
                    <th>Division Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-striped">
            </tbody>
        </table>
     </div>
</div>

<div class="modal fade" id="createDivisiontModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create New Division</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body container">
                <div class="card-body">
                    <form class="needs-validation" novalidate>
                        <div class="form-group">
                            <label for="exampleInputDepartement">Nama Division</label>
                            <input type="text" class="form-control" id="InputDivisionName" placeholder="Enter departement" required>
                        </div>
                        <button type="submit" class="btn btn-primary swalDefaultSuccess swalDefaultError" onclick="createDivision()">Submit</button>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsDivisionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Detail Department</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="modalDetail" class="modal-body container">
                <!-- Isi modal -->
                <!-- /Isi modal -->

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editDivisionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="modalEdit" class="modal-body">
                <!-- Isi modal -->
                <h1>Edit</h1>
                <h4>Division</h4>
                <hr />

                <form class="needs-validation" novalidate>
                    <div class="text-danger"></div>

                    <div class="form-group">
                        <label for="diviNameInput" class="control-label">Name</label>
                        <input id="diviNameInput" name="diviementName" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label for="divisionSelect" class="control-label">Division ID</label>
                        <select id="divisionSelect" name="divisionId" class="form-control"></select>


                    </div>
                    <div class="form-group mt-2">
                    </div>
                </form>

                <!-- /Isi modal -->

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="deleteDivisionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="modalDelete" class="modal-body container">
                <!-- Isi modal -->
                <!-- /Isi modal -->

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>
</div>

